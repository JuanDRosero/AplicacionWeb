@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Relaciones</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarritoCompras.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar bg-dark text-white">
            <div class="d-flex d-flex-row px-3">
                <a class="navbar-brand text-white"asp-area="" asp-controller="Usuario" asp-action="Index">Familiares</a>
                <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Ver" asp-route-Id=@Context.Session.GetInt32("ID")>Ver mis datos</a>
                 <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Editar" asp-route-Id=@Context.Session.GetInt32("ID")>Editar mis datos</a>
            </div>
            <div class="d-flex flex-row-reverse px-3">
                  <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Cerrar Sesión</a>
                  <span class="nav-link text-white">@Context.Session.GetString("Nombre")</span>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mb-0">
        <div class="container text-center">
           <h6>Desarrollado con: <a href="https://getbootstrap.com/" target="_blank">Bootrstrap</a></h6>
           <h6>Desarrollado por: <a href="https://www.linkedin.com/in/juan-david-rosero-torres-1b1473177/" target="_blank">Juan David Rosero Torres</a></h6>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
